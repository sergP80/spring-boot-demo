                        separator=";"
                        relativeToChangelogFile="true"/>
        <rollback/>
    </changeSet>

    <changeSet id="after-0.0.1.3" author="sergii puzyrov" context="dev or local" runOnChange="true">
        <preConditions onFail="HALT">
            <tableExists schemaName="library" tableName="book"/>
        </preConditions>

        <loadUpdateData schemaName="library"
                        tableName="book"
                        file="csv/book.csv"
                        primaryKey="id"
                        separator=";"
                        relativeToChangelogFile="true"/>
        <rollback/>
    </changeSet>
    <changeSet id="after-0.0.1.4" author="andrii petrov" context="dev or local" runOnChange="true">
        <preConditions onFail="HALT">
            <tableExists schemaName="library" tableName="client"/>
        </preConditions>

        <loadUpdateData schemaName="library"

        <preConditions onFail="HALT">
            <tableExists schemaName="library" tableName="history"/>
        </preConditions>

        <loadUpdateData schemaName="library"
                        tableName="history"
                        file="csv/history.csv"
                        primaryKey="id"
                        separator=";"
                        relativeToChangelogFile="true"/>
        <rollback/>
    </changeSet>
    <changeSet id="after-0.0.1.6" author="andrii petrov" context="dev or local" runOnChange="true">
        <preConditions onFail="HALT">
            <tableExists schemaName="library" tableName="booked"/>
        </preConditions>

        <loadUpdateData schemaName="library"

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
                   logicalFilePath="changelog/after/0.0.1.xml">

    <changeSet id="after-0.0.1.1" author="petrov andrii" context="dev or local" runOnChange="true">
        <preConditions onFail="HALT">
            <tableExists schemaName="property" tableName="properties"/>
        </preConditions>

        <loadUpdateData schemaName="property"
                        tableName="properties"
                        file="csv/property.csv"
                        primaryKey="id"
                        separator=";"
                        relativeToChangelogFile="true"/>
        <rollback/>
    </changeSet>

    <changeSet id="after-0.0.1.1000" author="petrov andrii" context="dev or local" runAlways="true">
        <validCheckSum>ANY</validCheckSum>
        <sql>
            SELECT setval('property.properties_id_seq', (SELECT MAX(id) FROM property.properties)+1, true);
        </sql>
        <rollback/>
    </changeSet>
</databaseChangeLog>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
                   logicalFilePath="changelog/migration/R-1.0.0/1.0.0.0.xml">

    <changeSet id="1.0.0.0.0" author="andrii petrov">
        <preConditions onFail="MARK_RAN">
            <not>
                <customPrecondition className="liquibase.precondition.custom.CreateEnumPrecondition">
                    <param name="schemaName" value="property"/>
                    <param name="typeName" value="Status"/>
                </customPrecondition>
            </not>
        </preConditions>

        <!-- Create the ENUM type -->
        <sql>
            CREATE TYPE property.Status AS ENUM ('AVAILABLE', 'SOLD');
        </sql>

        <rollback>
            DROP TYPE property.Status;
        </rollback>
    </changeSet>

    <changeSet id="1.0.0.0.1" author="andrii petrov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="property"  tableName="properties"/>
            </not>
        </preConditions>

        <createSequence schemaName="property" sequenceName="properties_id_seq" startValue="1" incrementBy="1" cycle="false" cacheSize="10"/>

        <createTable schemaName="property" tableName="properties">
            <column name="id" type="int" defaultValueComputed="nextval('property.properties_id_seq')">
                <constraints primaryKeyName="pk_properties" primaryKey="true" nullable="false"/>
            </column>
            <column name="location" type="varchar(1024)"/>
            <column name="price" type="decimal(12,2)"/>
            <column name="type" type="varchar(64)"/>
            <column name="status" type="varchar(50)" defaultValue="AVAILABLE">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable schemaName="property" tableName="properties"/>
            <dropSequence schemaName="property" sequenceName="properties_id_seq"/>
        </rollback>
    </changeSet>
</databaseChangeLog>